<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrong_word_view"
    android:layout_width="320dp"
    android:layout_height="220dp"
    android:background="@drawable/wrong_word_paper"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="错词:"
            android:textColor="#FF0000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="worngword body"
            android:textColor="#0000FF"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/wrong_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="0/0"
            android:textColor="#FF0000"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp" 
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/body_zh_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wrong word"
            android:textColor="#FF0000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/soundmark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:text="soundmark"
            android:textColor="#0000FF"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="例句："
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/usage_en_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="解释："
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/usage_zh_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>